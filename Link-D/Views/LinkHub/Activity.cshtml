@{
}

    <div class="container">
        <h1 class="text-center my-4">Recent Activity</h1>
        <div class="row">
            <!-- Left column -->
            <div class="col-md-8">
                <!-- Activity card -->
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <!-- User avatar -->
                            <img src="https://via.placeholder.com/50" class="rounded-circle me-2" alt="User avatar">
                            <!-- User name and time -->
                            <div>
                                <h5 class="card-title mb-0">John Doe</h5>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                        <!-- Activity content -->
                        <p class="card-text">John Doe liked a post by Jane Smith.</p>
                        <!-- Liked post -->
                        <div class="border p-3 rounded bg-light">
                            <!-- Post author and time -->
                            <div class="d-flex align-items-center mb-2">
                                <!-- Post author avatar -->
                                <img src="https://via.placeholder.com/50" class="rounded-circle me-2" alt="Post author avatar">
                                <!-- Post author name and time -->
                                <div>
                                    <h6 class="mb-0">Jane Smith</h6>
                                    <small class="text-muted">3 hours ago</small>
                                </div>
                            </div>
                            <!-- Post content -->
                            <p>I'm so happy to announce that I got a promotion at work!</p>
                            <!-- Post reactions and comments -->
                            <div class="d-flex justify-content-between align-items-center">
                                <!-- Reactions -->
                                <div>
                                    <i class="fas fa-thumbs-up text-primary me-1"></i>12
                                    <i class="fas fa-heart text-danger me-1 ms-2"></i>8
                                </div>
                                <!-- Comments -->
                                <div>
                                    <i class="fas fa-comment text-secondary me-1"></i>4
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Another activity card -->
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <!-- User avatar -->
                            <img src="https://via.placeholder.com/50" class="rounded-circle me-2" alt="User avatar">
                            <!-- User name and time -->
                            <div>
                                <h5 class="card-title mb-0">John Doe</h5>
                                <small class="text-muted">4 hours ago</small>
                            </div>
                        </div>
                        <!-- Activity content -->
                        <p class="card-text">John Doe commented on a post by Jane Smith.</p>
                        <!-- Commented post -->
                        <div class="border p-3 rounded bg-light">
                            <!-- Post author and time -->
                            <div class="d-flex align-items-center mb-2">
                                <!-- Post author avatar -->
                                <img src="https://via.placeholder.com/50" class="rounded-circle me-2" alt="Post author avatar">
                                <!-- Post author name and time -->
                                <div>
                                    <h6 class="mb-0">Jane Smith</h6>
                                    <small class="text-muted">5 hours ago</small>
                                </div>
                            </div>
                            <!-- Post content -->
                            <p>Check out this amazing article I found on Medium!</p>
                            <!-- Post link -->
                            <a href="#" class="text-decoration-none text-dark">
                                <!-- Link image -->
                                <img src="https://via.placeholder.com/300x200" class="img-fluid rounded mb-2" alt="Link image">
                                <!-- Link title and description -->
                                <div>
                                    <h6>How to Master Bootstrap 5 in 10 Easy Steps</h6>
                                    <p>A comprehensive guide to the most popular front-end framework.</p>
                                </div>
                            </a>

                            <!-- Post reactions and comments -->
                            <div class="d-flex justify-content-between align-items-center">
                                <!-- Reactions -->
                                <div>
                                    <i class="fas fa-thumbs-up text-primary me-1"></i>10
                                    <i class="fas fa-heart text-danger me-1 ms-2"></i>6
                                </div>
                                <!-- Comments -->
                                <div>
                                    <i class="fas fa-comment text-secondary me-1"></i>8
                                </div>
                            </div>

                        </div>

                        <!-- User comment -->
                        <div class="border p-3 rounded bg-light mt-3">
                            <!-- Comment content -->
                            <p>This is a great article! Thanks for sharing, Jane.</p>

                        </div>

                    </div>

                </div>

            </div>
           
       </div>
       
   </div>

          

