
@section LinkHub
{
}

@section Scripts {
    <script src="/js/SignUp.js" defer></script>

 }



<div class="container d-flex flex-column justify-content-between  my-5" style="background-color: #F3F6F8;">
   
    <h3 class="text-center" style="font-weight: 400;"> Sign Up</h3>
    <form style="margin-left:400px" id="my-form">
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">First name</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter first name" required>
                    <div style="color: red;">
                    <p hidden class="empty-field" >Field Cannot be Empty</p>
                    <p hidden class="invalid-text">First Name contains only letters.</p>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Last name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter last name"  required>
                <div style="color: red;">
                    <p hidden class="empty-field">Field Cannot be Empty</p>
                    <p hidden class="invalid-text">Last Name contains only letters.</p>
                    </div>
            </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" aria-describedby="emailPrepend" required>
                <div style="color: red;" >
                    <p hidden class="empty-field">Field Cannot be Empty</p>
                    <p hidden class="invalid-text">Email must be valid and it should contains @@.</p>
                </div>
               
                    
                </div>
                <div class="col-md-6 mb-3">
                    <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter password" required>
                <div style="color: red;" hidden class="invalid-text">
                    <p >Your password does not meet the following requirements:</p>
                                    <ul>
                                        <li>At least 8 characters</li>
                                        <li>At least one letter</li>
                                        <li>At least one number</li>
                                        <li>At least one special character</li>
                                    </ul>
                            </div>
        </div>
                <div class="col-md-6 mb-3">
                    <label for="password">Confirm Password</label>
                <input type="password" class="form-control" id="confirmpassword" placeholder="Re-Enter password" aria-describedby="passwordPrepend" required>
                <div style="color: red;" hidden class="invalid-text">
                    <p>Password not matching </p>
                </div>
       </div>
                      
                </div>
                
                <button class="btn btn-primary" id="submit" type="button" onclick="signUp();">Submit</button>
        </form>
</div>
